
<% provide(:title, 'Kiểm tra đơn hàng') %>
<% provide(:button_text, 'Tạo đơn hàng') %>
<div style="margin:10vh 10vw">

<% if current_user.address.blank? or current_user.phone.blank?  then %>
<h1>Hãy nhập đầy đủ địa chỉ, số điện thoại của bạn trước khi quay lại tạo đơn hàng tại:</h1>
<a href="/users/edit"><button class="materialize-btn materialize-btn-black">Chỉnh sửa tài khoản</button></a>
<% else %>
	<h1>Hãy kiểm tra thông tin của bạn</h1>
	<p><%= current_user.name %> <%= current_user.lastname %></p>
	<p><%= current_user.address %></p>
	<p><%= current_user.phone %></p>
	<div class="row">
	<div class="col-md-6 col-md-offset-3">
	    <%= render 'form' %></div>
	</div>
<% end %>


</div>

