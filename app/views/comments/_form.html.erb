<%= form_with(model: [ @product, @product.comments.build ], local: true) do |form| %>
<p>
  <%= form.label :'Người bình luận' %><br>
  <%= form.text_field :commenter, style: "border: 0;outline: 0;background: transparent;border-bottom: 1px solid black;" %>
</p>
<p>
  <%= form.label :'Nội dung' %><br>
  <%= form.text_area :body,style: "border: 0;outline: 0;background: transparent;border-bottom: 1px solid black;" %>
</p>
<p>
  <%= form.submit :'Tạo bình luận' %>
</p>
<% end %>